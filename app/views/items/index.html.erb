



<p id="notice"><%= notice %></p>

<h1>Trabajos a cargo por usuario</h1>

<table>
	<tr>
		<td>Usuario</td>
		<td>Serial</td>
		<td>Categoria</td>
	</tr>
	<% @item.each do |x| %>
		<tr>
		<li>
		<td><%= x.user.name%></td>
			<td><%= x.serial %></td>
			<td><%= x.category.name %></td>
			</li>
			
		</tr>
	<% end %>
</table>


<%= form_tag(:action => "index") do %>	
	<%= text_field_tag "delete", nil, class: "class" %>

	<%= submit_tag "Borrar Serial", class: "class" %>

<% end -%>




